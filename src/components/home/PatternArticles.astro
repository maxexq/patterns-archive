---
import type { ArticleFrontmatter } from "../../lib/types";
import { GLOBAL } from "../../lib/variables";
import ArticleSnippet from "../ArticleSnippet.astro";

type Props = {
  articleList: ArticleFrontmatter[]
}

const { articleList } = Astro.props;
---

<div class="flex justify-between items-center w-full">
  <h3 class="font-display text-lg sm:text-xl leading-loose">{GLOBAL.articlesName}</h3>
</div>
<ul class="my-8 flex flex-col gap-4">
  {
    (articleList.length === 0 && <p>{GLOBAL.noArticles}</p>) ||
    articleList.map((article) => (
        <li>
          <ArticleSnippet
            title={article.title}
            markdownBody={article.markdownBody}
            url={article.url}
            tags={article.tags ?? []}
            timestamp={article.timestamp}
          />
        </li>
      ))
  }
</ul>